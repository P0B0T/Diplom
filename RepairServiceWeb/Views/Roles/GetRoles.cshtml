@using RepairServiceWeb.Domain.ViewModels

@model RolesViewModel

<div class="card mb-3 mx-auto divGet">
    <div class="card-body">
        <h5 class="card-title text-center">@Model.Role1</h5>
        <p class="card-text"><b>Описание: </b>@Model.Description</p>
    </div>
</div>

<div class="divCenter">
    <form>
        <button type="button" onclick="openModal({ url: '/Roles/AddOrEditRoles', data: '@Model.Id', title: 'Редактирование роли' })" data-toggle="ajax-modal" data-target="Modal">Редактировать</button>
        <button type="button" style="margin-left: 6em" onclick="openConfirm({ url: '/Roles/DeleteRoles', data: '@Model.Id' })" data-toggle="ajax-modal" data-target="Modal">Удалить</button>
    </form>
</div>